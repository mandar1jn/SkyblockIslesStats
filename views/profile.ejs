<% function calcXp(data)
{
	let current = data.xp;
	let required = xpReqs[data.level];
	for(let i = 0; i < data.level; i++)
	{
		current -= xpReqs[i];
	}
	let percentage = ((current/required)*100).toFixed(0);
	return `${current.toFixed(0)}/${required} (${percentage}%)`;
} %>

